@model List<TeknosipEntityLayer.Concrete.Problem>

<div class="container py-4">
    <h3>Daha Önce Gönderdiğiniz Sorunlar</h3>
    <br />
    <br />
    <br />
    @if (Model != null && Model.Any())
    {
        <div class="row g-3">
            @foreach (var sorun in Model)
            {
                <div class="col-12">
                    <div class="card shadow-sm rounded-4 p-3 position-relative">
                        <span class="badge bg-info text-dark position-absolute top-0 end-0 m-3">
                            @(string.IsNullOrEmpty(sorun.Status) ? "Bekleniyor" : sorun.Status)
                        </span>

                        <h5 class="card-title">@sorun.Title</h5>
                        <p class="card-text text-truncate" style="max-width: 100%;">
                            @(sorun.Description.Length > 150 ? sorun.Description.Substring(0, 150) + "..." : sorun.Description)
                        </p>
                        <div class="d-flex justify-content-between text-muted">
                            <small>@(sorun.Sector != null ? sorun.Sector.Name : "-")</small>
                            <small>@sorun.OlusturmaTarihi.ToString("dd.MM.yyyy")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Henüz gönderdiğiniz bir sorun bulunmamaktadır.</p>
    }
</div>
